    <LinearLayout
        android:id="@+id/titleAndDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/descriptionContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/dailyCaloriesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="trainingName"
            android:textColor="@color/title_color"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Wrapper LinearLayout for Date TextView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Date TextView -->
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="dd/MM/yyyy"
                android:textColor="@color/title_color"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Container for Description Label and Progress Bar -->
    <LinearLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/exercisesList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleAndDate">

        <!-- Description TextView -->
        <TextView
            android:id="@+id/descriptionTrainingLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Training Progress"
            android:textSize="18dp" />

        <!-- Horizontal ScrollView with ProgressBar -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/progressBarContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Progress Bar Label and Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/trainingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="50%"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/trainingProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="100dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_bar_yellow" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- RecyclerView for exercises -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercisesList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:divider="@drawable/list_divider"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionContainer" />

    <!-- LinearLayout to hold the buttons -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisesList"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/addFoodFormButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/button_color"
            android:text="@string/add_exercise"
            android:textColor="@color/title_color"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_fluent_text_bullet_list_add_24_filled"
            app:iconGravity="top"
            app:iconSize="42dp"
            app:iconTint="@color/title_color"
            />

        <Button
            android:id="@+id/removeFoodFormButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_color"
            android:text="@string/edit_training"
            android:textColor="@color/title_color"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_fluent_text_bullet_list_square_edit_24_regular"
            app:iconGravity="top"
            app:iconSize="42dp"
            app:iconTint="@color/title_color" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
