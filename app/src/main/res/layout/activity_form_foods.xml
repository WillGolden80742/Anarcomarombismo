<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forms.formFood">


  <TextView
      android:id="@+id/nutricional_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:text="@string/nutritional_information"
      android:textColor="@color/title_color"
      android:textSize="32sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/scrollView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/nutricional_label"
      app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

      <TextView
          android:id="@+id/textViewName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/food_description"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/insert_the_food_description"
          android:inputType="textPersonName"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewGrams"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/grams"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextGrams"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/insert_grams"
          android:inputType="numberDecimal"
          android:text="100.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewProtein"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/proteins"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextProtein"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/enter_protein"
          android:inputType="numberDecimal"
          android:text="0.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewCarbohydrate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/carbohydrates"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextCarbohydrate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/enter_carbohydrate"
          android:inputType="numberDecimal"
          android:text="0.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewLipids"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/lipids"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextLipids"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/enter_lipids"
          android:inputType="numberDecimal"
          android:text="0.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewCaloriesKcal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/calories_kcal"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextCaloriesKcal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:background="@drawable/edittext_background"
          android:ems="10"
          android:hint="@string/enter_calories_kcal"
          android:inputType="numberDecimal"
          android:padding="12dp"
          android:text="0"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/textViewDietaryFiber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/dietary_fiber"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextDietaryFiber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/enter_dietary_fiber"
          android:inputType="numberDecimal"
          android:text="0.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

      <TextView
          android:id="@+id/textViewSodium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:text="@string/sodium"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textSize="24dp" />

      <EditText
          android:id="@+id/editTextSodium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:ems="10"
          android:hint="@string/enter_sodium"
          android:inputType="numberDecimal"
          android:text="0.0"
          android:background="@drawable/edittext_background"
          android:padding="12dp" />

    </LinearLayout>


  </ScrollView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/buttonContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/scrollView">

    <Button
        android:id="@+id/addFoodFormButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_color"
        android:text="@string/add_nutrition_info"
        android:textColor="@color/yellow"
        app:icon="@drawable/ic_fluent_save_24_regular"
        app:iconGravity="textStart"
        app:iconSize="32dp"
        app:iconTint="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/removeFoodFormButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/removeFoodFormButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_color"
        android:text="@string/remove_nutrition_info"
        android:textColor="@color/yellow"
        app:icon="@drawable/ic_fluent_delete_24_regular"
        app:iconGravity="textStart"
        app:iconSize="32dp"
        app:iconTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addFoodFormButton" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
