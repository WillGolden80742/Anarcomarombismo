<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".formDailyCalories">


    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="258dp"
        android:layout_height="47dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/listFoodsView"
        app:layout_constraintEnd_toStartOf="@+id/searchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#fefd02"
        android:textColor="#000000"
        app:icon="@drawable/ic_fluent_search_24_filled"
        app:iconSize="32dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/listFoodsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchEditText"
        app:layout_constraintTop_toTopOf="@id/searchEditText"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listFoodsView"
        android:layout_width="351dp"
        android:layout_height="325dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/totalCaloriesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEditText" />

    <TextView
        android:id="@+id/nameFoodLabel"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalCaloriesLabel" />

    <TextView
        android:id="@+id/editTextDate"
        android:layout_width="349dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:inputType="date"
        android:text="00/00/0000"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameFoodLabel" />

    <Button
        android:id="@+id/addFoodButton"
        android:layout_width="82dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#fefd02"
        android:enabled="false"
        android:textColor="#000000"
        app:icon="@drawable/ic_fluent_text_bullet_list_add_24_filled"
        app:iconSize="32dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/saveCaloriesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gramsEditText"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate"
        app:layout_constraintVertical_bias="0.615" />

    <EditText
        android:id="@+id/gramsEditText"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="number"
        android:text="100"
        app:layout_constraintBottom_toTopOf="@+id/saveCaloriesButton"
        app:layout_constraintEnd_toStartOf="@+id/addFoodButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <TextView
        android:id="@+id/totalCaloriesLabel"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:text="Total: 0000"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/nameFoodLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listFoodsView" />

    <Button
        android:id="@+id/saveCaloriesButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#fefd02"
        android:text="salvar"
        android:textColor="#000000"
        app:icon="@drawable/ic_fluent_save_24_regular"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gramsEditText"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/seeFoodsButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#fefd02"
        android:text="Ver"
        android:textColor="#000000"
        app:icon="@drawable/ic_fluent_eye_show_24_filled"


        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveCaloriesButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/gramsTextView"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:text="g"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/saveCaloriesButton"
        app:layout_constraintEnd_toStartOf="@+id/addFoodButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gramsEditText"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/removeDailyCaloriesButton"
        :src="@drawable/ic_fluent_delete_24_regular"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#fefd02"
        android:text="apagar"
        android:textColor="#000000"
        app:icon="@drawable/ic_fluent_delete_24_regular"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeFoodsButton"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
