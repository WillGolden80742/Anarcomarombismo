<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anarcomarombismo"
    android:versionCode="1"
    android:versionName="1.25" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.example.anarcomarombismo.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.anarcomarombismo.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Anarcomarombismo" >
        <activity
            android:name="com.example.anarcomarombismo.Forms.formBMR"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.Forms.formMacro"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.bodyStatistics"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.Forms.formFood"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.dailyCaloriesFoods"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.Forms.formDailyCalories"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.dailyCalories"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.Forms.formExercise"
            android:exported="false" />
        <activity
            android:name="com.example.anarcomarombismo.exercises"
            android:exported="false"
            android:theme="@style/Theme.Anarcomarombismo" />
        <activity
            android:name="com.example.anarcomarombismo.Forms.formTraining"
            android:exported="true"
            android:theme="@style/Theme.Anarcomarombismo" />
        <activity
            android:name="com.example.anarcomarombismo.mainActivity"
            android:exported="true"
            android:theme="@style/Theme.Anarcomarombismo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent filter para arquivos .anarchy3 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.anarchy3" />
                <data android:pathPattern=".*\\..*\\.anarchy3" />
                <data android:pathPattern=".*\\..*\\..*\\.anarchy3" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.anarcomarombismo.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.anarcomarombismo.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>