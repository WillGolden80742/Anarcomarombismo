<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/trainingList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/trainings_label"
            android:textColor="@color/title_color"
            android:textSize="32dp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/importTrainings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:backgroundTint="@color/button_color"
            app:srcCompat="@drawable/select_folder"
            app:tint="@color/title_color" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/exportTrainings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/button_color"
            app:srcCompat="@drawable/shared_fluent_icon"
            app:tint="@color/title_color" />

    </LinearLayout>

    <ListView
        android:id="@+id/trainingList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:divider="@drawable/list_divider"
        android:dividerHeight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingList"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/addTrainingButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_color"
            android:textColor="#FFFFFF"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_fluent_text_bullet_list_add_24_filled"
            app:iconGravity="textStart"
            app:iconSize="42dp"
            app:iconTint="@color/title_color" />

        <Button
            android:id="@+id/dailyCaloriesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_color"
            android:textColor="#FFFFFF"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/ic_fluent_food_24_regular"
            app:iconGravity="textStart"
            app:iconSize="42dp"
            app:iconTint="@color/title_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
